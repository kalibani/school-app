<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Data Teachers</title>
  </head>
  <body>
    <h1>Halaman Teachers</h1>
    <a href="/">Back to Home</a>
    <table border="1"="width:25%">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%dataTeachers.forEach(data =>{ %>
          <tr>
            <td><%=data.id%></td>
            <td><%=data.first_name%></td>
            <td><%=data.last_name%></td>
            <td><%=data.email%></td>
            <td>
              <a href="teachers/update/<%=data.id%>">Edit</a>
              <a href="teachers/delete/<%=data.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
   </table>
   <br>
   <form action="/teachers" method="POST">
     <fieldset>
       <br><br>
       <legend>Add Data Teachers:</legend>
       first name:<br>
       <input type="text" name="first_name" placeholder="first_name">
       <br>
       last name:<br>
       <input type="text" name="last_name" placeholder="last_name">
       <br>
       email:<br>
       <input type="text" name="email" placeholder="email">
       <br><br>
       <input type="submit" value="SUBMIT">
     </fieldset>
   </form>
  </body>
</html>
